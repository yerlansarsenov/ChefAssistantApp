<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/first_column"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/ingredient_name"
        app:layout_constraintBottom_toBottomOf="@id/ingredient_name"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/first_column"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/second_column"
        tools:text="apple"
        android:gravity="center_horizontal"
        app:layout_constrainedWidth="true"
        />

    <View
        android:id="@+id/second_column"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintLeft_toRightOf="@id/first_column"
        app:layout_constraintRight_toLeftOf="@id/third_column"
        app:layout_constraintTop_toTopOf="@id/ingredient_amount"
        app:layout_constraintBottom_toBottomOf="@id/ingredient_amount"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ingredient_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/second_column"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/third_column"
        tools:text="5.54"
        android:gravity="center_horizontal"
        app:layout_constrainedWidth="true"
        />

    <View
        android:id="@+id/third_column"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintLeft_toRightOf="@id/second_column"
        app:layout_constraintRight_toLeftOf="@id/four_column"
        app:layout_constraintTop_toTopOf="@id/ingredient_unit"
        app:layout_constraintBottom_toBottomOf="@id/ingredient_unit"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ingredient_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/third_column"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/four_column"
        tools:text="1 piece"
        android:gravity="center_horizontal"
        app:layout_constrainedWidth="true"
        />

    <View
        android:id="@+id/four_column"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintLeft_toRightOf="@id/third_column"
        app:layout_constraintRight_toLeftOf="@id/fifth_column"
        app:layout_constraintTop_toTopOf="@id/ingredient_consistency"
        app:layout_constraintBottom_toBottomOf="@id/ingredient_consistency"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ingredient_consistency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/four_column"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/fifth_column"
        tools:text="first one"
        android:gravity="center_horizontal"
        app:layout_constrainedWidth="true"
        />

    <View
        android:id="@+id/fifth_column"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="@id/ingredient_consistency"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ingredient_consistency"
        />

</androidx.constraintlayout.widget.ConstraintLayout>